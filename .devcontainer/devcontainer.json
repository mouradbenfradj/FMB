{
    "name": "Symfony Development",
    "dockerComposeFile": ["docker-compose.yml"],
    "service": "www",
    "workspaceFolder": "/var/www/asc",
    "remoteEnv": {
        "APP_ENV": "dev",
        "APP_DEBUG": "1",
        "DATABASE_URL": "mysql://root:mourad@database:3306/asc"
    },
    "extensions": [
        "felixfbecker.php-debug",
        "bmewburn.vscode-intelephense-client",
        "fabpot.vscode-symfony",
        "sianglim.slim",
        "neilbrayfield.php-docblocker",
        "mikestead.dotenv"
    ],
    "settings": {
        "docker.host": "tcp://localhost:2375", // Indique l'adresse de l'hôte Docker Desktop
        "docker.remotePlatform": {"os": "linux"} // Indique le système d'exploitation du conteneur
    }
}
