{% extends 'base.html.twig' %}
{% block body %}
  <!-- Form row -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h4 class="header-title mb-3">Wizard With Form Validation</h4>

          <div id="rootwizard">
            <ul class="nav nav-pills bg-light nav-justified form-wizard-header mb-3">
              <li class="nav-item" data-target-form="#parc">
                <a href="#first" data-toggle="tab" class="nav-link rounded-0 pt-2 pb-2 active">
                  <i class="mdi mdi-account-circle mr-1"></i>
                  <span class="d-none d-sm-inline">Parc</span>
                </a>
              </li>
              <li class="nav-item" data-target-form="#poche">
                <a href="#second" data-toggle="tab" class="nav-link rounded-0 pt-2 pb-2">
                  <i class="mdi mdi-face-profile mr-1"></i>
                  <span class="d-none d-sm-inline">Poche</span>
                </a>
              </li>
              <li class="nav-item" data-target-form="#resultat">
