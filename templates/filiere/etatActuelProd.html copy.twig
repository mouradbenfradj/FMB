<div class="row">
	<div class="col-sm-12">
		<div class="card-box">
			<h4 class="header-title">Triggers</h4>
			<p class="sub-header">
				<div class="mb-2">
					<div class="row">
						<div class="col-12 text-sm-center form-inline">
							<div class="form-group mr-2">
								<select id="demo-foo-filter-status" class="custom-select custom-select-sm">
									<option value="">Tri par Réf. Filière</option>
									<option value="active">Tri par Capacité Filière</option>
									<option value="active">Tri par Remplissage Filière</option>
									<option value="active">Tri par Flottabilité Filière</option>
								</select>
							</div>
							<div class="form-group mr-2">
								<select id="demo-foo-filter-status" class="custom-select custom-select-sm">
									<option value="">Croissant</option>
									<option value="active">Decroissant</option>
								</select>
							</div>
						</div>
					</div>
				</div>

				<div class="mb-2">
					<div class="row">
						<div class="col-12 text-sm-center form-inline">
							<button type="button" data-page-size="10">10</button>
							<button type="button" data-page-size="20">20</button>
							<button type="button" data-page-size="50">50</button>
							<button type="button" data-page-size="100">100</button>
							<button type="button" data-page-size="200">200</button>
						</div>
					</div>
				</div>

			</p>
			<table id="demo-foo-row-toggler" class="table table-bordered toggle-circle mb-0">
				<thead>
					<tr>
						<th data-toggle="true">
							Réf. Filière
						</th>
						<th>
							Remplissage Filière (%)
						</th>
						<th>Flottabilité Filière (%)</th>
						<th>
							Capacité Filière (u)
						</th>
						<th>
							Places Remplies (u)
						</th>
						<th data-hide="phone">
							Places Vides (u)
						</th>
						<th data-hide="all">
							Taille Filière (m)
						</th>
						<th data-hide="all">
							Total Emplacements (u)
						</th>
						<th data-hide="all">
							Emplacements Vides (u)
						</th>
						<th data-hide="all">
							Emplacements Remplis (u)
						</th>
						<th data-hide="all">
							Total Cordes (u)
						</th>
						<th data-hide="all">
							Total Cordes Huitre (u)
						</th>
						<th data-hide="all">
							Total Cordes Moule (u)
						</th>
						<th data-hide="all">
							Total Lanternes (u)
						</th>
						<th data-hide="all">
							Total Poches (u)
						</th>
						<th data-hide="all">
							Dérniere Date De MAE
						</th>
						<th data-hide="all">
							Total Passages chaussettes (u)
						</th>
						<th data-hide="all">
							Segments
						</th>
					</tr>
				</thead>
				<tbody>
					{% set pos = 0 %}
					{% for filiere in filieres %}
						<tr>
							<td>{{filiere.nomFiliere}}</td>
							<td>{% include "etat_actuel_prod/partials/_progress.html.twig" with {remplissage: loop.index} only %}</td>
							<td>{% include "etat_actuel_prod/partials/_flottabiliter.html.twig" with {remplissage: filiere.flottabiliter} only %}{{filiere.volumesTotale}}
								(L)
								{{filiere.flottabiliter}}
								(kgf)</td>
							<td>{{ filiere.nombreEmplacements  }}</td>
							<td>{{ filiere.nombreEmplacementsRemplit  }}</td>
							<td>
								{{ filiere.nombreEmplacementsVide  }}</td>
							<td>{{ filiere.segments|map(segment => "#{segment.longeur}")|reduce((l, v) => l + v)  }}
								m</td>
							<td>{{ filiere.nombreEmplacements  }}</td>
							<td>{{ filiere.nombreEmplacementsVide  }}</td>
							<td>{{ filiere.nombreEmplacementsRemplit  }}</td>
							<td>0</td>
							<td>0</td>
							<td>0</td>
							<td>0</td>
							<td>0</td>
							<td>0</td>
							<td>0</td>
							<td>
								{% include "segment/etatActuelProd.html.twig" with {pos: pos,filiere:filiere} only %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
				<tfoot>
					<tr class="active">
						<td colspan="6">
							<div class="text-right">
								<ul class="pagination pagination-split justify-content-end footable-pagination m-t-10"></ul>
							</div>
						</td>
					</tr>
				</tfoot>

			</table>
		</div>
		<!-- end card-box -->
	</div>
	<!-- end col -->
</div>
<!-- end row -->
